{
  "workflow_description": {
    "name":"chipseq_analysis",
    "version": 1.0,
    "label":"ChIP-seq peak calling",
    "type":"chipseq_analysis",
    "inputs":[
      "mapped/*no_dups*"
    ],
    "outputs":[
      "mapped/*.bam*"
    ],
    "report_index": "final_report.html",
    "reports":[
      "final_report.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "UMI",
    "umi_usage",
    "lib_ROI",
    "trim_adapters",
    "is_paired",
    "reference"
  ],
  "gui_params" : {
    "primary": {
      "use_groups": {
        "label": "Compare experiments",
        "type": "bool",
        "default": false
      },
      "frag_len": {
        "label": "Fragment length",
        "type": "string",
        "default": "unk"
      },
      "eff_genome_size": {
        "label": "Effective genome size",
        "type": "string",
        "default": "use unk or look at https://deeptools.readthedocs.io/en/develop/content/feature/effectiveGenomeSize.html"
      }
    },
    "detailed": {
      "top_peaks": {
        "label": "Top peaks",
        "type": "int",
        "default": 10
      },
      "peak_annot_over": {
        "label": "Annotate peaks over",
        "type": "string",
        "default": "gene"
      },
      "peak_annot_by": {
        "label": "Annotate peaks by",
        "type": "string",
        "default": "gene_name,gene_id"
      },
      "conds_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "group": {
        "label": "Experiment",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "use_groups": true
            }
          }
        }
      },
      "tag": {
        "label": "Tag",
        "type": "string",
        "default": ""
      }
    }
  }
}


